<% cities = ["Nairobi", "Karachi", "Delhi", "New York City", "Mumbai", "Sao Paulo", "Copenhagen", "Lahore", "Perth", "Jelling", "Paris", "Vilnius"] %>
<% times = ["60 hours", "20 hours", "10 hours", "30 hours", "5 hours"] %>

<div class="container">
  <div class="container-fluid">
    <div class="row">
      <div class="text-center">
        <h1>Current projects</h1>
      </div>
    </div>
  </div>

  <div class="container less-padded">
    <div class="row">
      <% @selected_projects.each do |project|%>
        <div class="col-xs-4 .col-md-3">
          <div class="card text-center">
            <% project.project_skills.each do |project_skill| %>
              <%= image_tag("#{project_skill.skill.name.downcase.tr(' ', '')}.svg", height: 124, width: 124) %>
            <% end %>
            <h4><%= link_to project.name, project_path(project) %></h4>
            <div class="text-left">
            <p><strong>Skill:</strong>
            <% project.project_skills.each do |project_skill| %>
              <%= project_skill.skill.name %></p>
            <% end %>
            <p><strong> Time: </strong><%= times.sample %></p>
            <p><strong> Location: </strong><%= cities.sample %></p>
            <p><%= simple_format(project.description[0..80] + "...") %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class='text-center padded'>
    <%= link_to "Start contributing", new_profile_path, class: "btn btn-medium text-center" %>
  </div>
</div>
