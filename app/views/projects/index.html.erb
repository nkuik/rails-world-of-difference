<div class='text-center padded'>
  <%= link_to "Create new project", new_project_path, class: "btn btn-medium text-center" %>
</div>

<div class="container">
  <div class="row">
    <% sorted_projects = @projects.sort.reverse %>
    <% sorted_projects.each do |project|%>
      <div class="col-xs-4 .col-md-3">
        <div class="card text-center">


          <% project.project_skills.each do |project_skill| %>
            <%= image_tag("#{project_skill.skill.name.downcase.tr(' ', '')}.svg", height: 124, width: 124) %>
          <% end %>
          <h4><%= link_to project.name, project_path(project) %></h4>
          <div class="text-left">
          <p><strong>Skill:</strong>
          <% project.project_skills.each do |project_skill| %>
            <%= project_skill.skill.name %></p>
          <% end %>
          <p><strong> Time:</strong> Estimated hours</p>
          <p>On location or possible to work remote</p>
          <p><%= simple_format(project.description) %></p>
          </div>




        </div>
      </div>
    <% end %>
  </div>
</div>



