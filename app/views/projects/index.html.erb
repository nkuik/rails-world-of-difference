<div class='text-center less-padded'>
  <%= link_to "Create a new project", new_project_path, class: "btn btn-medium text-center" %>
</div>

<div class="container less-padded">
  <div class="row">
    <% sorted_projects = @projects.sort.reverse %>
    <% sorted_projects.each do |project|%>
      <div class="col-md-6 col-xs-12">
        <div class="card text-center">
          <% project.project_skills.each do |project_skill| %>
            <%= image_tag("#{project_skill.skill.name.downcase.tr(' ', '')}.svg", height: 100, width: 100) %>
          <% end %>
          <h2><%= link_to project.name, project_path(project) %></h2>
          <p><%= project.description %></p>
          <h4>Skill</h4>
          <% project.project_skills.each do |project_skill| %>
            <h6> <%= project_skill.skill.name %></h6>
          <% end %>
          <h6>Time</h6>
          <h6>Location</h6>
        </div>
      </div>
    <% end %>
  </div>
</div>



