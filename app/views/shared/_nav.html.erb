<div class="navbar">
    <div class="navbar-wagon-left hidden-xs hidden-sm">
      <%= link_to "Projects", projects_path, class:"navbar-wagon-item navbar-wagon-link" %>
      <!-- Text link -->
      <a href="" class="navbar-wagon-item navbar-wagon-link">Contact</a>
      <!-- Text link -->
      <a href="" class="navbar-wagon-item navbar-wagon-link">About</a>
    </div>
    <div class="navbar-wagon-right hidden-xs hidden-sm">
      <% if user_signed_in? %>
        <%= link_to "Log off", destroy_user_session_path, class:"navbar-wagon-item navbar-wagon-link", method: :delete %>
        <%= link_to "My profile", edit_profile_path(current_user), class:"navbar-wagon-item navbar-wagon-link" if current_user.present? %>
      <% else %>
        <%= link_to "Log in", user_session_path, class:"navbar-wagon-item navbar-wagon-link" %>
        <%= link_to "Create an account", new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link btn btn-medium" %>
      <% end %>
      <% if user_signed_in? && current_user.facebook_picture_url %>
        <%= link_to image_tag(current_user.facebook_picture_url, height: 50, width: 50), edit_profile_path(current_user), class:"navbar-wagon-item navbar-wagon-link" if current_user.present? %>
      <% end %>
    </div>
    <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <!-- links in dropdown menu -->
        <li><%= link_to "My profile", edit_profile_path(current_user), class:"navbar-wagon-item navbar-wagon-link" if current_user.present? %></li>
        <li><%= link_to "Log off", destroy_user_session_path, class:"navbar-wagon-item navbar-wagon-link", method: :delete %></li>
        <li><%= link_to "See our projects", projects_path, class:"navbar-wagon-item navbar-wagon-link" %></li>
        <li><a href="" class="navbar-wagon-item navbar-wagon-link">Contact</a></li>
        <!-- Text link -->
        <li><a href="" class="navbar-wagon-item navbar-wagon-link">About</a></li>
      </ul>
    <% else %>
    </div>
  </div>
</div>




